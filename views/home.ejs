<%-include('partials/header')%> <% if (user) { %>
<style>
  .hero {
    background-image: url("https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80");
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    position: relative;
  }
  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }
  .hero .text-center {
    position: relative;
    z-index: 2;
  }
  .hero .btn {
    margin: 0 10px;
  }
</style>
<div class="hero">
  <div class="text-center">
    <h1 class="display-1">Welcome to My Blog</h1>
    <p class="lead">A place to share your thoughts and ideas</p>
    <p class="mb-4">Hello, <%= user.username %>! Welcome back!</p>
  </div>
</div>
<% } else { %>
<style>
  .hero {
    background-image: url("https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80");
    background-size: cover;
    background-position: center;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    position: relative;
  }
  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }
  .hero .text-center {
    position: relative;
    z-index: 2;
  }
  .hero .btn {
    margin: 0 10px;
  }
</style>
<div class="hero">
  <div class="text-center">
    <h1 class="display-1">Welcome to My Blog</h1>
    <p class="lead">A place to share your thoughts and ideas</p>
    <p class="mb-4">Please login or register to continue.</p>
    <a href="/auth/login" class="btn btn-light btn-lg"
      ><i class="fas fa-sign-in-alt"></i> Login</a
    >
    <a href="/auth/register" class="btn btn-outline-light btn-lg"
      ><i class="fas fa-user-plus"></i> Register</a
    >
  </div>
</div>
<% } %> <%-include('partials/footer')%>
