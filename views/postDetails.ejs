<%-include('partials/header', {title:"Home", user: user})%>
<h1><%= post?.title %></h1>
<p><%= post?.content %></p>
<% post?.images?.forEach((image)=>{ %>
<div>
  <img src="<%= image.url %>" alt="Post Image" />
</div>

<% }) %>
<!-- action buttons -->
<% if(user?._id.toString() == post?.author?._id?.toString()) { %>
<div>
  <a href="/posts/<%= post._id %>/edit">Edit</a>
  <a href="/posts/<%= post._id %>/delete">Delete</a>
</div>

<!--comment form-->
<div>
  <h3>Comments</h3>
  <form action="/posts/<%= post?._id %>/comments" method="post">
    <textarea
      name="content"
      rows="5"
      placeholder="Add comment"
      required
    ></textarea>
    <input type="submit" value="comment" />
  </form>
</div>

<% } %> <%-include('partials/footer')%>
