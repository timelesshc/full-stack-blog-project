<%-include('partials/header', {title:"Posts", user: user})%>
<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">
        <i class="fas fa-blog text-primary me-2"></i>
        All Posts
      </h1>

      <% if(posts?.length > 0) { %>
        <div class="row g-4">
          <% posts.forEach(post => { %>
            <div class="col-lg-6 col-xl-4">
              <div class="card h-100 shadow-sm border-0">
                <% if (post?.images?.length) { %>
                  <div class="card-img-top overflow-hidden" style="height: 200px;">
                    <img src="<%= post.images[0].url %>"
                         class="w-100 h-100 object-fit-cover"
                         alt="<%= post.title %>"
                         style="object-fit: cover;">
                  </div>
                <% } %>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-dark mb-2">
                    <%= post.title %>
                  </h5>

                  <p class="card-text text-muted flex-grow-1">
                    <%= post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content %>
                  </p>

                  <div class="mt-auto">
                    <div class="d-flex align-items-center justify-content-between">
                      <small class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        <%= post.author.username %>
                      </small>
                      <small class="text-muted">
                        <i class="fas fa-calendar me-1"></i>
                        <%= new Date(post.createdAt).toLocaleDateString() %>
                      </small>
                    </div>
                  </div>
                </div>

                <div class="card-footer bg-transparent border-0 pt-0">
                  <a href="/posts/<%= post._id %>" class="btn btn-primary btn-sm w-100">
                    <i class="fas fa-eye me-1"></i>
                    Read More
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
          <h3 class="text-muted">No posts available</h3>
          <p class="text-muted">Be the first to create a post!</p>
          <% if (user) { %>
            <a href="/posts/add" class="btn btn-primary">
              <i class="fas fa-plus me-1"></i>
              Create Post
            </a>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>
<%-include('partials/footer')%>