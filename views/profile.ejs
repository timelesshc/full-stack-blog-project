<%-include('partials/header', {title: 'Profile', user: user})%>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg border-0 mb-4">
        <div class="card-body p-4">
          <div class="d-flex align-items-center gap-3 mb-3">
            <div>
              <% if (user?.profilePicture && user.profilePicture.url) { %>
              <img
                src="<%= user.profilePicture.url %>"
                alt="Avatar"
                class="rounded-circle"
                style="width: 84px; height: 84px; object-fit: cover"
              />
              <% } else { %>
              <div
                class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                style="width: 84px; height: 84px"
              >
                <i class="fas fa-user fa-2x"></i>
              </div>
              <% } %>
            </div>
            <div class="flex-grow-1">
              <h3 class="mb-1 text-dark"><%= user?.username %></h3>
              <p class="text-muted mb-1"><%= user?.email %></p>
              <p class="text-muted mb-1">
                Joined: <%= user?.createdAt ? new
                Date(user.createdAt).toLocaleDateString() : '' %>
              </p>
              <% if (user?.bio) { %>
              <p class="text-muted small mb-0"><%= user.bio %></p>
              <% } %>
            </div>
            <div class="text-end">
              <a href="/users/edit" class="btn btn-outline-primary mb-2">
                <i class="fas fa-edit me-1"></i> Edit Profile</a
              >
              <form action="/users/delete" method="POST" class="mt-1">
                <button type="submit" class="btn btn-outline-danger">
                  <i class="fas fa-user-slash me-1"></i> Delete Account
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-lg border-0">
        <div class="card-header bg-white border-bottom-0">
          <h4 class="card-title mb-0 text-dark">
            <i class="fas fa-list me-2 text-primary"></i>Your Posts
          </h4>
        </div>
        <div class="card-body p-4">
          <% if(posts?.length > 0) { %>
          <div class="row g-4">
            <% posts.forEach(post => { %>
            <div class="col-lg-6 col-xl-4">
              <div class="card h-100 shadow-sm border-0">
                <% if (post?.images?.length) { %>
                <div class="card-img-top overflow-hidden" style="height: 200px">
                  <img
                    src="<%= post.images[0].url %>"
                    class="w-100 h-100 object-fit-cover"
                    alt="<%= post.title %>"
                    style="object-fit: cover"
                  />
                </div>
                <% } %>

                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-dark mb-2"><%= post.title %></h5>

                  <p class="card-text text-muted flex-grow-1">
                    <%= post.content.length > 150 ? post.content.substring(0,
                    150) + '...' : post.content %>
                  </p>

                  <div class="mt-auto">
                    <div
                      class="d-flex align-items-center justify-content-between"
                    >
                      <small class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        <%= post.author.username %>
                      </small>
                      <small class="text-muted">
                        <i class="fas fa-calendar me-1"></i>
                        <%= new Date(post.createdAt).toLocaleDateString() %>
                      </small>
                    </div>
                  </div>
                </div>

                <div class="card-footer bg-transparent border-0 pt-0">
                  <a
                    href="/posts/<%= post._id %>"
                    class="btn btn-primary btn-sm w-100"
                  >
                    <i class="fas fa-eye me-1"></i>
                    Read More
                  </a>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else { %>
          <p class="text-muted mb-0">You haven't created any posts yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%-include('partials/footer')%>
